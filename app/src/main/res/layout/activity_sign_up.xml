<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_header_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/space_big"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_big"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="@dimen/space_big"
                app:cardCornerRadius="@dimen/space_small"
                app:cardElevation="@dimen/space_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/carRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/EditName"
                        style="@style/description"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/space_avg"
                        android:layout_marginTop="@dimen/space_avg"
                        android:layout_marginEnd="@dimen/space_avg"
                        android:background="@drawable/btn_rounder"
                        android:hint="@string/name"
                        android:padding="@dimen/space_small"
                        tools:ignore="Autofill,TextFields,UnusedAttribute" />

                    <EditText
                        android:id="@+id/txtPhone"
                        style="@style/description"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/space_avg"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginEnd="@dimen/space_avg"
                        android:background="@drawable/btn_rounder"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="@dimen/space_small"
                        tools:ignore="Autofill,TextFields,UnusedAttribute" />

                    <EditText
                        android:id="@+id/txtPassword"
                        style="@style/description"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/space_avg"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginEnd="@dimen/space_avg"
                        android:background="@drawable/btn_rounder"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:padding="@dimen/space_small"
                        tools:ignore="Autofill,TextFields,UnusedAttribute" />

                    <TextView
                        android:id="@+id/btnRegister"
                        style="@style/title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/space_avg"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginEnd="@dimen/space_avg"
                        android:layout_marginBottom="@dimen/space_avg"
                        android:background="@drawable/btn_rounder"
                        android:backgroundTint="@color/btnOrange"
                        android:text="@string/continuer"
                        android:textColor="@android:color/white"
                        android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView"
                style="@style/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_avg"
                android:gravity="center"
                android:text="@string/have_account"
                android:textColor="@color/text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview" />

            <TextView
                android:id="@+id/txtLogin"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:gravity="center"
                android:text="@string/login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                style="@style/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/copyright"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtLogin" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>

